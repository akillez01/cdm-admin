# Configuração Apache para CDM Admin
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Servir arquivos estáticos diretamente
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^(.*)$ - [L]
    
    # Servir diretórios existentes
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^(.*)$ - [L]
    
    # Apenas redirecionar se não for arquivo estático
    RewriteCond %{REQUEST_URI} !^/cdm-admin/assets/
    RewriteCond %{REQUEST_URI} !\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|json|xml|txt)$
    RewriteRule ^(.*)$ /cdm-admin/index.html [L]
</IfModule>

# Tipos MIME essenciais
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType application/javascript .mjs
    AddType text/css .css
    AddType image/svg+xml .svg
    AddType image/png .png
    AddType image/jpeg .jpg
    AddType image/jpeg .jpeg
    AddType image/gif .gif
    AddType image/webp .webp
    AddType font/woff2 .woff2
    AddType font/woff .woff
    AddType font/ttf .ttf
    AddType font/eot .eot
    AddType application/json .json
</IfModule>

# Headers de segurança
<IfModule mod_headers.c>
    # Permitir CORS se necessário
    Header set Access-Control-Allow-Origin "*"
    
    # Tipos de conteúdo corretos
    <FilesMatch "\.(js|mjs)$">
        Header set Content-Type "application/javascript"
    </FilesMatch>
    
    <FilesMatch "\.css$">
        Header set Content-Type "text/css"
    </FilesMatch>
    
    # Remover headers conflitantes
    Header unset X-Content-Type-Options
    Header set X-Content-Type-Options "nosniff"
</IfModule>
